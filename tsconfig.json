{
	"compilerOptions": {
        "incremental": true,
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,

		"rootDir": "./",
		"outDir": "dist",
		"allowJs": false,
		"sourceMap": false,
		"pretty": true,
		"declaration": false,
		"alwaysStrict": true,
		"isolatedModules": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictNullChecks": true,
		"watch": true,
	},
	"exclude": ["./node_modules", "./build"],
	"include": ["./**/*.js"],
	"rules": {
		"@typescript-eslint/ban-ts-ignore": "off"
	}
}
